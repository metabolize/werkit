{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DependencyGraph": {
      "additionalProperties": false,
      "properties": {
        "inputs": {
          "additionalProperties": {
            "$ref": "#/definitions/Input"
          },
          "type": "object"
        },
        "intermediates": {
          "additionalProperties": {
            "$ref": "#/definitions/InnerNode"
          },
          "type": "object"
        },
        "outputs": {
          "additionalProperties": {
            "$ref": "#/definitions/InnerNode"
          },
          "type": "object"
        },
        "schemaVersion": {
          "const": 1,
          "type": "number"
        }
      },
      "required": ["schemaVersion", "inputs", "intermediates", "outputs"],
      "type": "object"
    },
    "InnerNode": {
      "additionalProperties": false,
      "properties": {
        "dependencies": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "valueType": {
          "$ref": "#/definitions/ValueType"
        }
      },
      "required": ["valueType", "dependencies"],
      "type": "object"
    },
    "Input": {
      "additionalProperties": false,
      "properties": {
        "valueType": {
          "$ref": "#/definitions/ValueType"
        }
      },
      "required": ["valueType"],
      "type": "object"
    },
    "ValueType": {
      "enum": ["Number", "Point", "Measurement"],
      "type": "string"
    }
  }
}
