{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "es2015", "dom", "es6"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./",
    "sourceMap": false,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
