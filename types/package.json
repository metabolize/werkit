{
  "name": "werkit",
  "version": "0.35.0",
  "description": "TypeScript types for Werkit, a toolkit for encapsulating Python-based computation into deployable and distributable tasks",
  "main": "dist",
  "bin": "dist/cli.js",
  "types": "dist",
  "type": "module",
  "scripts": {
    "prebuild": "del dist",
    "build": "tsc",
    "postbuild": "shebang-trim dist/cli.js",
    "prepare": "npm run build",
    "test": "mocha \"src/*.test.ts\" \"src/**/*.test.ts\"",
    "check-types": "tsc --noEmit",
    "check-package-version": "if [ $(cd .. && poetry version --short) = $(node -e \"console.log(require('./package.json').version)\") ]; then exit 0; else echo 'Package versions are not in sync'; exit 1; fi;",
    "prepublishOnly": "npm run check-package-version"
  },
  "files": [
    "dist"
  ],
  "author": "Metabolize",
  "license": "MIT",
  "repository": "metabolize/werkit",
  "keywords": [
    "devops",
    "computation",
    "compute"
  ],
  "dependencies": {
    "@metabolize/uuid-to-hex": "^2.0.0",
    "@types/node": "20.5.1",
    "argparse": "^2.0.1",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "aws-sdk": "2.x"
  },
  "devDependencies": {
    "@types/argparse": "2.0.10",
    "@types/chai-as-promised": "7.1.5",
    "@types/chai": "4.3.5",
    "@types/chai-string": "1.4.2",
    "@types/mocha": "10.0.1",
    "@types/uuid": "9.0.2",
    "aws-sdk": "2.1415.0",
    "chai": "4.3.7",
    "chai-as-promised": "7.1.1",
    "chai-string": "1.5.0",
    "del-cli": "5.0.0",
    "dotenv": "16.3.1",
    "mocha": "10.2.0",
    "shebang-trim": "1.2.0",
    "tmp-promise": "3.0.3",
    "ts-node": "10.9.1"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "loader": "ts-node/esm",
    "experimental-specifier-resolution": "node"
  }
}
